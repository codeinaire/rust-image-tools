{
  "name": "rust-image-converter-web",
  "version": "0.1.0",
  "private": true,
  "description": "Frontend for Rust + WASM image converter",
  "source": "src/index.html",
  "scripts": {
    "build:wasm": "wasm-pack build ../crates/image-converter --target web --release",
    "dev": "parcel src/index.html",
    "dev:full": "npm run build:wasm && parcel src/index.html",
    "build": "npm run build:wasm && parcel build src/index.html"
  },
  "devDependencies": {
    "@parcel/packager-raw-url": "^2.16.4",
    "@parcel/transformer-jsonld": "^2.16.4",
    "@tailwindcss/postcss": "^4",
    "parcel": "^2",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "postcss": "^8",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
